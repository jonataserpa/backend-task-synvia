generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int    @id @default(autoincrement())
  name        String
  email       String
  phone       String
  dateborn    String
  radiogender String

  createAt DateTime  @default(now())
  updateAt DateTime  @updatedAt
  deleteAt DateTime?
  Task     Task[]

  @@index([name])
  @@map("users")
}

model Task {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  userId      Int?
  user        User?  @relation(fields: [userId], references: [id])

  createAt DateTime  @default(now())
  updateAt DateTime  @updatedAt
  deleteAt DateTime?

  @@index([title])
  @@map("tasks")
}
